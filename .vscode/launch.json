  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "reverse (no param)",
      "cargo": {
        "args": [
          "build",
          "--bin=exercism-sandbox",
          "--package=exercism-sandbox"
        ],
        "filter": {
          "name": "exercism-sandbox",
          "kind": "bin"
        }
      },
      "args": ["reverse"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "reverse \"Hello world.\"",
      "cargo": {
        "args": [
          "build",
          "--bin=exercism-sandbox",
          "--package=exercism-sandbox"
        ],
        "filter": {
          "name": "exercism-sandbox",
          "kind": "bin"
        }
      },
      "args": ["reverse", "'Hello world.'"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Unit Tests",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=exercism-sandbox",
          "--package=exercism-sandbox"
        ],
        "filter": {
          "name": "exercism-sandbox",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}